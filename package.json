    "@ls-lint/ls-lint": "2.2.2",
    "@spiriit/vite-plugin-svg-spritemap": "2.2.4",
    "@vitest/ui": "0.34.7",
    "autoprefixer": "10.4.19",
    "cli-progress": "3.12.0",
    "eslint": "8.57.0",
    "eslint-config-htmlacademy": "10.0.1",
    "glob": "10.3.10",
    "gulp-html-bemlinter": "3.0.1",
    "html-validate": "8.18.1",
    "htmlacademy-backstopjs": "6.6.1",
    "sass": "1.75.0",
    "sharp": "0.33.3",
